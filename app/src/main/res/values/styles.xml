<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn_verde" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/verde</item>
        <item name="colorControlHighlight">@color/verde_claro</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btn_gris" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/gris</item>
        <item name="colorControlHighlight">@color/gris_claro</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
